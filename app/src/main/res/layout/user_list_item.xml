<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium_global"
    android:gravity="center_vertical">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image_user"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_profile"
        app:siRadius="4dp"
        app:siBorderWidth="1dp"
        app:siBorderColor="@color/colorAccent"
        app:siSquare="true"
        android:layout_marginLeft="@dimen/margin_medium_global"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_min_global"
        android:textColor="@color/colorSecondaryText"
        style="?android:attr/textAppearanceMedium"
        android:id="@+id/name_user"
        android:layout_marginLeft="@dimen/margin_medium_global"/>

</LinearLayout>
