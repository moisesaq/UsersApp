<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moises.com.usersapp.ui.fragment.UserListFragment"
    tools:showIn="@layout/activity_user_list">

    <moises.com.usersapp.ui.customviews.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <GridView
        android:id="@+id/gv_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/size_thumbnails"
        android:horizontalSpacing="0dp"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:padding="0dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:visibility="visible"/>

</FrameLayout>
