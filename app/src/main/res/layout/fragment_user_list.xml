<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="moises.com.usersapp.ui.fragment.UserListFragment"
    tools:showIn="@layout/activity_user_list">

    <moises.com.usersapp.ui.view.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <GridView
        android:id="@+id/gv_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="120dp"
        android:horizontalSpacing="@dimen/grid_padding"
        android:numColumns="auto_fit"
        android:padding="@dimen/grid_padding"
        android:verticalSpacing="@dimen/grid_padding"/>

</FrameLayout>
